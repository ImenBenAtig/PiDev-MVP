{% extends 'BACK/base.html.twig' %} 
{% block body %}
<div class="card-body">

    {{ form_start(blog, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="form-group">
        {{ form_label(blog.title, 'Sujet', {'label_attr': {'class': 'font-weight-bold'}}) }}
        {{ form_widget(blog.title, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le sujet du blog'}}) }}
       <div class="text-danger"> {{ form_errors(blog.title, {'attr': {'class': 'invalid-feedback'}}) }}</li></div>
    </div>
    <div class="form-group">
        {{ form_label(blog.content, 'content', {'label_attr': {'class': 'font-weight-bold'}}) }}
        {{ form_widget(blog.content, {'attr': {'class': 'form-control', 'placeholder': 'Entrez une description du blog'}}) }}
      <div class="text-danger">  {{ form_errors(blog.content, {'attr': {'class': 'invalid-feedback'}}) }}</div>
    </div>

    <div class="form-group">
        {{ form_label(blog.image, 'Photo principale', {'label_attr': {'class': 'font-weight-bold'}}) }}
        {{ form_widget(blog.image, {'attr': {'class': 'form-control'}}) }}
        <div class="text-danger">{{ form_errors(blog.image, {'attr': {'class': 'invalid-feedback'}}) }}</div>
    </div>
    
  


    <div class="form-group d-flex justify-content-end">
        <button type="submit" class="btn btn-primary mr-3" href="{{path('showblog')}}">Add blog </button>
        
    </div>
    {{ form_end(blog) }}

</div>

{% endblock %}