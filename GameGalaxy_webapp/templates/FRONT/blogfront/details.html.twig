{% extends 'FRONT/base.html.twig' %}

{% block body %}

<section class="blog-details pb-120">
  <div class="container">
    <div class="row justify-content-center border-bottom pb-5">
      <div class="col-12">
        <div class="blog-details__header"></div>
      </div>
      <div class="col-lg-10 mt-50">
        <div class="blog-details__content">
          <h2 class="blog-details__title">{{ blog.title }}</h2>
          <div class="img-holder text-center mt-5 mb-5">
            <img src="{{ asset('uploads/' ~ blog.image) }}" alt="{{ blog.image }}">
            <p style="font-size: 40px; font-weight: bold; text-align: center; color: red;">{{ blog.title }}</p>
          </div>
          <p style="font-size: 60px; font-weight: bold; text-align: center; color: blue;">{{ blog.content }}</p>


          {{ form_start(commentForm, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group">
              <div class="input-group">
                {{ form_widget(commentForm.content, {'attr': {'class': 'form-control', 'placeholder': 'Veuillez saisir un commentaire...'}}) }}
                <div class="input-group-append">
                  <button type="submit" class="btn btn-primary"><i class="bi bi-cursor-fill"></i></button>
                </div>
              </div>
            </div>
          {{ form_end(commentForm) }}
          
        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %}
