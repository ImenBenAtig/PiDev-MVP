{% extends 'FRONT/base.html.twig' %}

{% block title %}
	Evenements
{% endblock %}

{% block javascripts %}
	<!-- page-wrapper end -->
	<!-- jQuery library --><script src="{{asset('FRONT/assets/js/vendor/jquery-3.5.1.min.js')}}"> </script>
	<!-- bootstrap js -->
	<script src="{{asset('FRONT/assets/js/vendor/bootstrap.bundle.min.js')}}"></script>
	<!-- custom select js -->
	<script src="{{asset('FRONT/assets/js/vendor/jquery.nice-select.min.js')}}"></script>
	<!-- lightcase js -->
	<script src="{{asset('FRONT/assets/js/vendor/lightcase.js')}}"></script>
	<!-- wow js -->
	<script src="{{asset('FRONT/assets/js/vendor/wow.min.js')}}"></script>
	<!-- slick slider js -->
	<script src="{{asset('FRONT/assets/js/vendor/slick.min.js')}}"></script>
	<script src="{{asset('FRONT/assets/js/vendor/TweenMax.min.js')}}"></script>
	<!-- contact js -->
	<script src="{{asset('FRONT/assets/js/contact.js')}}"></script>
	<script src="{{asset('http://rexbd.net/html/sporcia/demo/assets/js/vendor/jquery.paroller.min.js')}}"></script>
	<!-- custom js -->
	<script src="{{asset('FRONT/assets/js/app.js')}}"></script>
	<script src="{{asset('share42.js')}}"></script>
	<!-- METIER SHARE js -->
	<script type="text/javascript" src="share42.js"></script>

	<!-- METIER FULLCALENDAR js -->
	<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.4/index.global.min.js'></script>
	<style>

		.fc .fc-daygrid-day-number {
			padding: 4px;
			position: relative;
			z-index: 4;
			color: white;
		}
		.fc .fc-col-header-cell-cushion {
			display: inline-block;
			padding: 2px 4px;
			color: white;
		}
	</style>
	<script>

		document.addEventListener('DOMContentLoaded', function () {
var calendarEl = document.getElementById('calendar');
var calendar = new FullCalendar.Calendar(calendarEl, {
height: 650,
initialView: 'dayGridMonth',
events: [{% for evenement in evenements %}{
title: "{{ evenement.nom }}",
start: "{{ evenement.date|date('Y-m-d') }}",
startTime: "{{ evenement.date|format_datetime('short', 'short', locale='en') }}",
eventColor: '#be2596'


},{% endfor %}],

locale: 'fr',
timeZone: 'Europe/paris',
headerToolbar: {
start: 'prev,next today',
center: 'title',
end: 'dayGridMonth,timeGridWeek'
}
});
calendar.render();
});
	</script>

{% endblock %}


{% block body %}
	<!-- inner-hero start -->
	<section class="inner-hero bg_img" data-background="../FRONT/assets/images/bg/inner-hero.jpg">
		<div class="shape position-absolute"><img src="../FRONT/assets/images/elements/inner-hero/shape.png" alt="image"></div>

		<div class="el-1 position-absolute"><img src="../FRONT/assets/images/logo.png" alt="image"></div>

		<div class="container">

			<div class="row">
				<div class="col-lg-12">
					<h2 class="page-title">Evenements</h2>
					<ul class="page-list">
						<li>
							<a href="index.html">Acceuil</a>
						</li>
						<li>Evenements</li>

					</ul>
				</div>

			</div>
			<div class="section-header text-center has--bg">
				<div class="header-image"><img src={{ asset(image_dir ~ 'elements/header-el.png') }} alt="image"></div>
				<h2 class="section-title">Planning</h2>
				<p>Guettez les évènements à venir</p>
			</div>
			<div id='calendar'></div>
		</div>

	</section>
	<!-- inner-hero end -->

	<!-- blog section start -->
	<section class="pt-120 pb-120">
		<div class="container">
			<div class="row mb-none-40">
				<div class="col-lg-12">
					<div class="section-header text-center has--bg">
						<div class="header-image"><img src={{ asset(image_dir ~ 'elements/header-el.png') }} alt="image"></div>
						<h2 class="section-title">Tous les évènements</h2>
						<p>Liste de tous les évènements à venir</p>
					</div>
					{% for evenement in evenements %}
						<div class="post-card style--three mb-40">
							<div class="post-card__thumb">
								<img src={{ asset("/uploads/evenements/" ~ evenement.image) }} alt="image">
							</div>
							<div class="post-card__content">
								<h3 class="post-card__title mb-3">
									<a href="front/{{ evenement.id }}">{{ evenement.nom }}</a>
								</h3>
								<p>{{ evenement.type }}</p>
								<span class="time">{{ evenement.date ? evenement.date|date('l M Y H:i:s') : '' }}</span>
							</div>
						</div>
						<!-- post-card end -->
						{% else %}

					{% endfor %}

					<div class="row mt-4">
						<div class="col-lg-12">
							<nav>
								<ul class="pagination justify-content-center align-items-center">
									<li class="page-item disabled">
										<a class="page-link prev" href="#" tabindex="-1" aria-disabled="true">
											<i class="las la-angle-double-left"></i>Prev</a>
									</li>

									<li class="page-item active" aria-current="page">
										<a class="page-link" href="#">1
											<span class="sr-only">(current)</span>
										</a>
									</li>

									<li class="page-item">
										<a class="page-link next" href="#" aria-disabled="true">Next
											<i class="las la-angle-double-right"></i>
										</a>
									</li>
								</ul>
							</nav>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- blog section end -->

{% endblock %}
