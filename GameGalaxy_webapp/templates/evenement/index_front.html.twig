	<script src="{{asset('FRONT/assets/js/vendor/TweenMax.min.js')}}"></script>
	<!-- contact js -->
	<script src="{{asset('FRONT/assets/js/contact.js')}}"></script>
	<script src="{{asset('http://rexbd.net/html/sporcia/demo/assets/js/vendor/jquery.paroller.min.js')}}"></script>
	<!-- custom js -->
	<script src="{{asset('FRONT/assets/js/app.js')}}"></script>
	<script src="{{asset('share42.js')}}"></script>
	<!-- METIER SHARE js -->
	<script type="text/javascript" src="share42.js"></script>

	<!-- METIER FULLCALENDAR js -->
	<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.4/index.global.min.js'></script>
	<script>

		document.addEventListener('DOMContentLoaded', function () {
		var calendarEl = document.getElementById('calendar');
		var calendar = new FullCalendar.Calendar(calendarEl, {
			height: 650,
				initialView: 'dayGridMonth',
				events: [
	{% for evenement in evenements %}
				{
						title: "{{ evenement.nom }}",
						start: "{{ evenement.date|date('Y-m-d') }}",
							startTime: "{{ evenement.date|format_datetime('short', 'short', locale='en')  }}",
						eventColor: '#be2596',
				
				
				}
	,{% endfor %}
						],
				
				locale: 'fr',
				timeZone: 'Europe/paris',
				headerToolbar: {
					start: 'prev,next today',
					center: 'title',
					end: 'dayGridMonth,timeGridWeek'
				}
				});
		calendar.render();
		});
	</script>

{% endblock %}


{% block body %}
	<!-- inner-hero start -->
	<section class="inner-hero bg_img" data-background="../FRONT/assets/images/bg/inner-hero.jpg">
		<div class="shape position-absolute"><img src="../FRONT/assets/images/elements/inner-hero/shape.png" alt="image"></div>

		<div class="el-1 position-absolute"><img src="../FRONT/assets/images/elements/inner-hero/el-1.png" alt="image"></div>
		<div class="el-2 position-absolute"><img src="../FRONT/assets/images/elements/inner-hero/el-2.png" alt="image"></div>
		<div class="el-3 position-absolute"><img src="../FRONT/assets/images/elements/inner-hero/el-3.png" alt="image"></div>
		<div class="el-4 position-absolute"><img src="../FRONT/assets/images/elements/inner-hero/el-4.png" alt="image"></div>
		<div class="el-5 position-absolute"><img src="../FRONT/assets/images/elements/inner-hero/el-5.png" alt="image"></div>
		<div class="el-6 position-absolute"><img src="../FRONT/assets/images/elements/inner-hero/el-6.png" alt="image"></div>

		<div class="container">
		
			<div class="row">
				<div class="col-lg-12">
					<h2 class="page-title">Evenements</h2>
					<ul class="page-list">
						<li>
							<a href="index.html">Acceuil</a>
						</li>
						<li>Evenements</li>
						
					</ul>
				</div>
				
			</div>

			<div id='calendar'></div>
		</div>
		
	</section>
	<!-- inner-hero end -->

	<!-- blog section start -->
	<section class="pt-120 pb-120">
		<div class="container">
			<div class="row mb-none-40">
				<div class="col-lg-12">
					{% for evenement in evenements %}
						<div class="post-card style--three mb-40">
							<div class="post-card__thumb">
								<img src="..\FRONT\assets\images\blog\bb1.jpg" alt="image">
							</div>
							<div class="post-card__content">
								<h3 class="post-card__title mb-3">
									<a href="front/{{ evenement.id }}">{{ evenement.nom }}</a>
								</h3>
								<p>{{ evenement.description }}</p>
								<span class="time">{{ evenement.date ? evenement.date|date('Y-m-d H:i:s') : '' }}</span>
							</div>
						</div>
						<!-- post-card end -->
						{% else %}

					{% endfor %}

					<div class="row mt-4">
						<div class="col-lg-12">
							<nav>
								<ul class="pagination justify-content-center align-items-center">
									<li class="page-item disabled">
										<a class="page-link prev" href="#" tabindex="-1" aria-disabled="true">
											<i class="las la-angle-double-left"></i>Prev</a>
									</li>

									<li class="page-item active" aria-current="page">
										<a class="page-link" href="#">1
											<span class="sr-only">(current)</span>
										</a>
									</li>

									<li class="page-item">
										<a class="page-link next" href="#">Next
											<i class="las la-angle-double-right"></i>
										</a>
									</li>
								</ul>
							</nav>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- blog section end -->

{% endblock %}
