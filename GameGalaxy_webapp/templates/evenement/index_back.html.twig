{% extends 'BACK/base.html.twig' %}

{% block title %}
	Evenements
{% endblock %}

{% block body %}
	<div id="layoutSidenav_content">
		<main>
			<div class="container-fluid px-4">
				<h1 class="mt-4">Evenements</h1>
				<ol class="breadcrumb mb-4">
					<li class="breadcrumb-item">
						<a href="#">Acceuil</a>
					</li>
					<li class="breadcrumb-item active">Evenements</li>
				</ol>
				<div class="card mb-4">
					<div class="card-header">
						<i class="fas fa-table me-1"></i>
						Evenements
					</div>
					<div class="card-body">
						<table id="datatablesSimple">
							<thead>
								<tr>
									<th>Id</th>
									<th>Nom</th>
									<th>Date</th>
									<th>Description</th>
									<th>Duree</th>
									<th>Capacite</th>
									<th>Type</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tfoot>
								<tr>
									<th>Id</th>
									<th>Nom</th>
									<th>Date</th>
									<th>Description</th>
									<th>Duree</th>
									<th>Capacite</th>
									<th>Type</th>
								</tr>
							</tfoot>
							<tbody>
								{% for evenement in evenements %}
									<tr>
										<td>{{ evenement.id }}</td>
										<td>{{ evenement.nom }}</td>
										<td>{{ evenement.date ? evenement.date|date('Y-m-d H:i:s') : '' }}</td>
										<td>{{ evenement.description }}</td>
										<td>{{ evenement.duree }}</td>
										<td>{{ evenement.capacite }}</td>
										<td>{{ evenement.type }}</td>
										<td>
											<div class="mt-4 mb-0">
												<div class="btn-group btn-group-sm" role="group" aria-label="Small button group">
													<a href="{{ path('app_back_evenement_show', {'id': evenement.id}) }}" class="btn btn-primary">Détails</a>
													<a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-secondary">Modifier</a>
													{{ include('evenement/_delete_form.html.twig') }}

												</div>
											</div>
										</td>
									</tr>
								{% else %}
									<tr>
										<td>
											N/A
										</td>
										<td>
											N/A
										</td>
										<td>
											N/A
										</td>
										<td>
											N/A
										</td>
										<td>
											N/A
										</td>
										<td>
											N/A
										</td>
										<td>
											N/A
										</td>
										<td>
											N/A
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
						<a class="btn btn-primary" href="{{ path('app_evenement_new') }}">Créer un évènement</a>
					</div>
				</div>
			</div>
		</main>
	{% endblock %}
