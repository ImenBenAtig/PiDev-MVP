<!-- HEAD SECTION END -->

<!-- HASSENE EVENEMENTS -->

<section class="pt-120 pb-90">
      <div class="container">
        <div class="row">
          <div class="col-lg-4">
            <div class="section-header has--bg style--two">
              <div class="header-image style--two"><img src={{ asset(image_dir ~ 'elements/header-el-4.png') }} alt="image"></div>
              <span class="section-sub-title">Evenements recents</span>
              <h2 class="section-title">Evenements</h2>
            </div>
            <a href="/evenement/front" class="cmn-btn">Voir tous les évènements</a>
          </div>
          <div class="col-lg-8 mt-lg-0 mt-5">
            <div class="blog-slider">
            {% for i in 0..2 %}
              <div class="post-card">
                <div class="post-card__thumb">
                  <img src={{ asset("/uploads/evenements/" ~ evenements[i].image) }} alt="image">
                </div>
                <div class="post-card__content">
                  <span class="date">{{evenements[i].date ? evenements[i].date|date('l M Y H:i:s') : '' }}</span>
                  <h3 class="post-title"><a href="/evenement/front/{{evenements[i].id}}">{{evenements[i].nom}}</a></h3>
                  
                </div>
              </div><!-- post-card end -->
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </section>

